	.main-box
		.main-box-body.clearfix
			.main-box
				.main-box-body.clearfix
				form.form-group   
					.row.xepan-push
						.col-lg-12
							.col-md-2.col-lg-2 To:-
							.col-md-10.col-lg-10 {$to}
					.row.xepan-push
						.col-lg-12
							.col-md-2.col-lg-2 Cc:-
							.col-md-10.col-lg-10 {$cc}
					.row.xepan-push
						.col-lg-12
							.col-md-2.col-lg-2 Bcc:-
							.col-md-10.col-lg-10 {$bcc}
					.row.xepan-push
						.col-lg-12
							.col-md-2.col-lg-2 Description:-
							.col-md-10.col-lg-10
								.atk-form-row.atk-form-field{$body}

					.row.xepan-push
						.col-lg-12
							.col-md-2.col-lg-2|&nbsp;
							.col-md-10.col-lg-10
								{$signature}
					.row.xepan-push
						.col-lg-12
							.col-md-2.col-lg-2 Form Email:-
							.col-md-10.col-lg-10
								.atk-form-row.atk-form-field{$from_email}
					.row.xepan-push
						.col-lg-12
							.col-md-2.col-lg-2 Send Attachments
							.col-md-10.col-lg-10
								.row
									i.fa.fa-check-square-o.xepan-padding-horizontal-small
									strong|Invoice is Attached has PDF
								.atk-form-row.atk-form-field{$Content}
				.xepan-push-large
				.atk-align-center.h-lines
						span.h-lines-wrap
						a.atk-swatch-tomato.atk-button-large.atk-col-5.w-shadow.action-large
							{$FormButtons}