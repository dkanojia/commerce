.row
  .col-lg-12.col-md-12.col-sm-12
    .panel
      ul.nav.nav-tabs.responsive-tabs
        li.active
          a(href='#tab-password', data-toggle='tab') Change Password
        li
          a(href='#tab-address', data-toggle='tab') Address
        li
          a(href='#tab-deactivate', data-toggle='tab') Deactivate My Account

      .tab-content(style="padding:20px;")
        #tab-password.tab-pane.active(style="width: 400px;margin:0 auto;")
          .row
            .col-md-12
              {$user_name}
              {$change_password}
        #tab-address.tab-pane(style="width: 600px;margin:0 auto;")
              |{$address}
        #tab-deactivate.tab-pane(style="width: 400px;margin:0 auto;")
          .row
            .col-lg-12 
              |{$deactivate}