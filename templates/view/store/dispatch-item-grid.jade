.xepan-grid.main-box.clearfix.atk-table.atk-table-zebra.atk-table-bordered(id="{$_name}" class="{$class}")
    {Pannel}
    header.main-box-header.clearfix.atk-actions(class=" {$class} ")
        div.filter-block( style="100%")
            .pull-right {$grid_buttons} 
            .form-group.pull-right.xepan-filter-form
                span(class="form-control pull-left")|{$quick_search}
                    i(class="fa fa-search search-icon")
    {/Pannel}
    .main-box-body.clearfix.table
        table.table.user-list.table-hover(style="width:100%")
            {header}
            thead
                {cols}{col}
                th
                    a.asc(href='#')
                        span Order No
                th
                    a.asc(href='#')
                        span Jobcard No
                th
                    a(href='#')
                        span From
                th.text-right
                    a.asc(href='#')
                        span To
                th
                //- th
                //-     a.asc(href='#')
                //-         span Related Document
                //- th
                //-     a.asc(href='#')
                //-         span Send
                th 
                {/}{/}
            {/}
            {$subheader}

            tbody
                {rows}{row}
                tr(class="{$odd_even}" data-id="{$id}")
                    {cols}
                    td
                        {$related_document_id}
                        .atk-label
                            small.fa.fa-user.user-subhead &nbsp;&nbsp;{customer}N\A{/}
                    td
                        {$jobcard_id}
                        .atk-label
                            //- small.fa.fa-user.user-subhead &nbsp;{$customer}    
                    td
                      | {$from_warehouse}
                    td.text-right
                      | {$to_warehouse}
                    //- td
                    //-     | {related_document_id}N\A{/}
                    //- td
                    //-     | {$send}
                    td.text-right
                        {$action}
                    td(style="width: 15%;")
                        {$edit}
                        {$delete}
                    
                    {/}
                {/}{/}
                {not_found}
                div.row
                    .col-md-12.text-center.alert.alert-warning(role="alert")
                        span.icon-attention.fa.fa-exclamation-triangle  &nbsp;{$not_found_message}
                {/}

            {totals}
            tfoot
                tr(class="totals")
                    {cols}{col}
                    <td {$tdparam}>
                    {$content}
                    </td>
                    {/}{/}
            {/}
        {$Paginator}
