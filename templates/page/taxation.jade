div(id="{$_name}" class="{$class}" style="{$style}")
  div.main-box.clearfix
    .tabs-wrapper.taxation
      ul.nav.nav-tabs
        li.active
          a(data-toggle="tab" href="#tab-taxation") Taxation
        li
          a(data-toggle="tab" href="#tab-taxationrule") Taxation Rule
        li
          a(data-toggle="tab" href="#tab-taxationconfig") Taxation Configuration
        li
          a(data-toggle="tab" href="#tab-shippingrule") Shipping Rule
      div.tab-content
        div.tab-pane.fade.in.active(id="tab-taxation")
          | {$taxation}
        div.tab-pane.fade.in(id="tab-taxationrule")
          | {$taxation_rule}
        div.tab-pane.fade.in(id="tab-taxationconfig")
          | {$taxation_configuration}
        div.tab-pane.fade.in(id="tab-shippingrule")
          | {$shippingrule}
