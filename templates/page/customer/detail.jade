#user-profile
  .col-lg-3.col-md-4.col-sm-4 {$contact_view}
  .col-lg-9.col-md-8.col-sm-8
    .main-box.clearfix
      .tabs-wrapper.profile-tabs
        ul.nav.nav-tabs
          li.active
            a(data-toggle='tab', href='#tab-BasicInfo') Customer Info
          li
            a(data-toggle='tab', href='#tab-Orders') Orders
          li
            a(data-toggle='tab', href='#tab-Invoice') Invoice
          li
            a(data-toggle='tab', href='#tab-Activity') Activity
        .tab-content
          #tab-BasicInfo.tab-pane.fade.in.active
            #BasicInfo
            | {basic_info}
            .row.col-lg-12.text-center
              h1 {$organization}
            .row.col-lg-12.panel.panel-default  
              .panel-heading.primary.h4  Legal Information
              .panel-body
                .col-lg-4
                   span 
                    strong TIN Number: {$tin_no}
                .col-lg-4
                  span 
                    strong PAN Number: {$pan_no}
                .col-lg-4
                  span 
                    strong Currency:  {$currency} {$currency_id}

            .row.col-lg-12.panel.panel-default  
              .panel-heading.primary.h4  Shipping Address
              .panel-body
                .row.col-lg-12.xepan-push
                  .col-lg-8
                     span
                      strong Address: {$shipping_address}
                  .col-lg-4
                     span 
                      strong City: {$shipping_city}
                .row.col-lg-12
                  .col-lg-4
                    span 
                      strong State: {$shipping_state}
                  .col-lg-4
                    span 
                      strong Country:  {$shipping_country}
                  .col-lg-4
                     span 
                      strong PIN Code: {$shipping_pincode}  

            .row.col-lg-12.panel.panel-default  
              .panel-heading.primary.h4  Billing Address
              .panel-body
                .row.col-lg-12.xepan-push
                  .col-lg-12
                    .checkbox
                      label
                        input(type='checkbox', value='yes')
                        strong Same as shipping address
                        
                .row.col-lg-12.xepan-push
                  .col-lg-8
                     span
                      strong Address: {$billing_address}
                  .col-lg-4
                     span 
                      strong City: {$billing_city}
                .row.col-lg-12
                  .col-lg-4
                    span 
                      strong State: {$billing_state}
                  .col-lg-4
                    span 
                      strong Country:  {$billing_country}
                  .col-lg-4
                     span 
                      strong PIN Code: {$billing_pincode}
