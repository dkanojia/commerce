.col-lg-9.col-md-8.col-sm-8
  .container
    ul.nav.nav-tabs
      li
        a(href='#tab-Basic', data-toggle='tab') Detail
      li
        a(href='#tab-Price', data-toggle='tab') Price
      li
        a(href='#tab-Custom', data-toggle='tab') Custom Field
      li.active
        a(href='#tab-Design', data-toggle='tab') Uploaded Design
    .tab-content
      #tab-Basic.tab-pane.fade
        .row
          .col-lg-12
            .container
              .panel-header
                a Detail
              .panel-body
                .row
                  .col-sm-3
                    label  
                    strong Name:
                  .col-lg-3 {name_wapper}{$name}{/}
                  .col-sm-3
                    label  
                    strong Code:
                  .col-lg-3 {sku_wrapper}{$sku}{/}
                .xepan-push
                .row
                  .col-lg-3
                    label
                    strong Status:
                  .col-lg-3 {display_sequence_wrapper}{$display_sequence}{/}
                .row
                  .col-lg-3
                    label  
                    strong Expiry Date:
                  .col-lg-6 {expiry_date_wrapper}{$expiry_date}{/}
                .xepan-push
                  
                  

                .row
                  .col-lg-3
                    label  
                    strong Description:
                  .col-lg-9
                    .form-group.pull-left
                    p {description_wrapper}{$description}{/}
                .xepan-push
                .row
                  .col-lg-3
                    label  
                    strong Terms & Condition:
                  .col-lg-3   
                     {terms_and_conditions_wrapper}{$terms_and_conditions}{/}
                 .row
                    header.container
                    .filter-block.pull-right
                      .form-group.pull-left
                        input.form-control(type='text', placeholder='Comment...')
                      a.btn.btn-primary.pull-right(href='#')
                        i.fa.fa-plus-circle.fa-lg
                        |  Add Comment


      #tab-Price.tab-pane.fade
        .row
          .col-lg-6
            header.panel-box-header
              h2 Price & Quantity
            .container
              .row
                .col-lg-3
                  label  
                  strong Price: 
                .col-lg-3  {sale_price_wrapper}{$sale_price}{/}
              .xepan-push
              .row
                .col-lg-3
                  label
                  strong Min Order Quantity:
                .col-lg-3       {minimum_order_qty_wrapper}{$minimum_order_qty}{/}
                .col-lg-3
                  label  
                  strong  Max Order Quantity: 
                .col-lg-3  {maximum_order_qty_wrapper}{$maximum_order_qty}{/}
              .xepan-push
              .row
                .col-lg-3
                  label  
                  strong Quantity Unit:
                .col-lg-3  {qty_unit_wrapper}{$qty_unit}{/}
                .col-lg-3
                  label  
                  strong Qty From Set Only:
                .col-lg-3
                  .checkbox-nice
                    i.fa.fa-times-circle.status-red  qty_from_set_only

      #tab-Custom.tab-pane.fade
        table-zebra.atk-table-bordered.atk4_grid
            header.container.atk-action
            .main-box-body.clearfix.table
              table.table.user-list.table-hover(style='width:100%')
                thead
                  tr
                    th
                      span department
                    th
                      span Custom Field
                    th
                      span Effect Stock
                    th
                      spamn Status
                    th
                      span Values
                    th
                tbody
                  tr.odd(data-id='44')
                    td {is_designable_wrapper}{$is_designable}{/}
                    td Remarks
                    td
                    td Active
                    td
                      button.atk-button-small.pb_Values(type='button') Values
                    td(style='width: 15%;')
                      a.table-link.pb_edit(data-id='44', href='#')
                        span.fa-stack
                          i.fa.fa-square.fa-stack-2x
                          i.fa.fa-pencil.fa-stack-1x.fa-inverse
                      a.table-link.danger.do-delete(data-id='44', href='#')
                        span.fa-stack
                          i.fa.fa-square.fa-stack-2x
                          i.fa.fa-trash-o.fa-stack-1x.fa-inverse
              .row
                header.container
                .filter-block.pull-right
                  .form-group.pull-left
                    input.form-control(type='text', placeholder='Add CustomField...')
                  a.btn.btn-primary.pull-right(href='#')
                    i.fa.fa-plus-circle.fa-lg
                    |  Add CustomField Association


      #tab-Design.tab-pane.fade.in.active
        header.container.atk-actions
        .filter-block(style='100%')
          .row
            .col-lg-12.pull-left
              .container
                .panel-body
                input(type='file', data-edit='insertImage', data-target='#pictureBtn', data-role='magic-overlay')
