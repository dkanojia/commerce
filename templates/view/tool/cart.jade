{$content}
.xepan-commerce-tool-cart.xepan-grid.main-box.clearfix.atk-table.atk-table-zebra.atk-table-bordered(id="{$_name}" class="{$class}")
    {Pannel}
    {$grid_buttons} 
    {/Pannel}
    {lister}
    {$total_count}
    .main-box-body.clearfix.table
        table.table.user-list.table-hover(style="width:100%")
            {header}
            thead
                {cols}{col}
                th
                  span Image
                th
                  span Item
                th
                  span Unit Price
                th
                  span Qty
                th
                  span Tax
                th
                  span Total
                th
                {/}{/}
            {/}
            {$subheader}

            tbody
                {rows}{row}
                tr(class="{$odd_even} xepan-commerce-tool-cart-item-row" data-id="{$id}")
                    {cols}
                    td
                        img(alt='', src='{$image_url}')
                    td
                        a.user-subhead Code : 
                        span {item_id}{/}
                        div {$name}
                        a(href='#')  Edit 
                        {custom_fields_wrapper}
                        {custom_field}
                        div {$id}: {$name}
                        {/}{/}
                    td
                        {unit_price}{/}
                    td
                        {qty_wrapper}
                        {qty_form}
                        {$qty}
                        {/}{/}
                    td 
                        {tax_percentage}undefined{/}
                    td 
                        {amount_excluding_tax}amt_excluding_tax_here{/}
                    td
                        button.btn.btn-xs.btn-danger.pull-right.xepan-commerce-cart-item-delete(data-cartid='{$id}') x
                    {/}
                {/}{/}
        {/lister}
        .row
            .col-md-8
            .col-md-4
                div Gross Amount = {$gross_amount}
                div Total Tax Amount = {$total_tax_amount}
                div Discount Amount = {$discount_amount}
                div New Amount = {$net_amount}
                div Shipping Amount = {$total_shipping_amount}
        .row
            {$place_order} 
        {$Content}