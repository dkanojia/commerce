.xepan-grid.main-box.clearfix.atk-table.atk-table-zebra.atk-table-bordered(id="{$_name}" class="{$class}")
    {Pannel}
    header.main-box-header.clearfix.atk-actions(class=" {$class} ")
        div.filter-block( style="100%")
            .pull-right {$grid_buttons} 
            .form-group.pull-right.xepan-filter-form
                span(class="form-control pull-left")|{$quick_search}
                    i(class="fa fa-search search-icon")
    {/Pannel}
    .main-box-body.clearfix
        .table-responsive
            table.table.user-list.table-hover
                {header}
                thead
                    {cols}{col}
                    th(id="{$name_sortid}")
                      span Name {$name_sort}
                    th(id="{$emails_str_sortid")
                      span Email {$emails_str_sort}
                    th
                      span Contact No
                    th
                    th
                    {/}{/}
                {/}
                {$subheader}

                tbody
                    {rows}{row}
                    tr(class="{$odd_even}" data-id="{$id}")
                        {cols}
                        td
                            {avatar}
                            img(src='img/samples/scarlet-159.png', alt='')
                            {/}
                            a.user-link(href='{url}?page=xepan_commerce_customerdetail&contact_id={$id}{/}') {$name} 
                            span.user-subhead {$city} {$state} {$country}
                        td
                            a(href='#') {emails_str} mila@kunis.com {/}
                        td
                            | {contacts_str} 8444545454 {/}
                        td
                            | {action}{/}
                        td(style="width: 15%;")
                            {$edit}
                            {$delete}
                        {/}
                    {/}{/}
                    {not_found}
                    div.row
                        .col-md-12.text-center.alert.alert-warning(role="alert")
                            span.icon-attention.fa.fa-exclamation-triangle  &nbsp;{$not_found_message}
                    {/}

                {totals}
                tfoot
                    tr(class="totals")
                        {cols}{col}
                        <td {$tdparam}>
                        {$content}
                        </td>
                        {/}{/}
                {/}
            {$Paginator}
