.main-box.clearfix
  section#email_setting_wizard.wizard.multiple-template.section-padding.color-light-white
    .wizard-inner( style="padding:1em")
      ul.steps(style='margin-left: 0')
        li.active(data-target="#step1")
          span
            .badge.badge-primary 1 
            | Amount
            span.chevron
        li(data-target="#step2")
          span
            .badge.badge-primary 2 
            | Address
            span.chevron
        li(data-target="#step3")
          span
            .badge.badge-primary 3
            | Payment Gateway Selected
            span.chevron
        li(data-target="#step4")
          span
            .badge.badge-primary 4
            | Processed
            span.chevron
  
  
      
    .actions
      button.btn.btn-primary.btn-mini.btn-prev(type="button")
        i.icon-arrow-left Prev
      button.btn.btn-success.btn-mini.btn-next(type="button")
        i.icon-arrow-right  Next
  
    

