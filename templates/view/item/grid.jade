.xepan-grid.main-box.clearfix.atk-table.atk-table-zebra.atk-table-bordered(id="{$_name}" class="{$class}")
    {Pannel}
    header.main-box-header.clearfix.atk-actions(class=" {$class} ")
        div.filter-block( style="100%")
            .pull-right {$grid_buttons} 
            .form-group.pull-right.xepan-filter-form
                span(class="form-control pull-left")|{$quick_search}
                    i(class="fa fa-search search-icon")
    {/Pannel}
    .main-box-body.clearfix.table
        table.table.user-list.table-hover(style="width:100%")
            {header}
            thead
                {cols}{col}
                th 
                    a
                    |Image
                th
                    a
                    | Name
                th
                    a
                    | Price
                th
                    a
                    | Type
                th
                    a
                    | Status
                th
                    a
                    | Total Sale
                th     
                {/}{/}
            {/}
            {$subheader}

            tbody
                {rows}{row}      
                tr(class="{$odd_even}" data-id="{$id}")
                    {cols}
                    td.text-center
                        {image}
                        img(alt='', src='img/samples/ipad.png')
                        {/}    
                    td
                        a(href='{url}?page=xepan_commerce_itemdetail&document_id={$id}{/}')
                            h2 iPad Mini 32GB Wifi
                        span.pull-center(title='code') Code: Ipd001
                    td
                        | {sale_price} $ 625.50 {/}
                        br
                        i(style='text-decoration:line-through;') {original_price} $800.50 {/}
                    td
                        span.label.label-warning {type} Saleable {/}
                    td
                        span.label.label-primary {status} PartyPublish {/}
                    td
                        span.graph-label
                            i.fa.fa-shopping-cart
                                b {total_sale} 1500 {/}
                        |  Orders
                        .graph-content.spark-orders
                        canvas(style='display: inline-block; width: 3px; height: 2px; vertical-align: top;', width='3', height='2')
                    td
                        | {action} {/}
                    td(style="width: 15%;")
                        {$edit}
                        {$delete}
                    
                    {/}
                {/}{/}
                {not_found}
                div.row
                    .col-md-12.text-center.alert.alert-warning(role="alert")
                        span.icon-attention.fa.fa-exclamation-triangle  &nbsp;{$not_found_message}
                {/}

            {totals}
            tfoot
                tr(class="totals")
                    {cols}{col}
                    <td {$tdparam}>
                    {$content}
                    </td>
                    {/}{/}
            {/}
        {$Paginator}