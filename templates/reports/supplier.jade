.xepan-grid.main-box.clearfix.atk-table.atk-table-zebra.atk-table-bordered(id="{$_name}" class="{$class}")
	{Pannel}
	header.main-box-header.clearfix.atk-actions(class=" {$class} ")
		div.filter-block( style="100%")
			.pull-right {$grid_buttons} 
			.form-group.pull-right.xepan-filter-form
				span(class="form-control pull-left")|{$quick_search}
					i(class="fa fa-search search-icon")
	{/Pannel}
	.main-box-body.clearfix.table
		table.table.user-list.table-hover(style="width:100%")
			{header}
			thead
				{cols}{col}
				th
					span Name
				th
					span 
				th 
				{/}{/}
			{/}
			{$subheader}

			tbody
				{rows}{row}
				tr(class="{$odd_even}" data-id="{$id}")
					{cols}
					td(style="width:30%;")
						span {$name}
					td(style="width:70%;")
						.main-box.infographic-box.colored.emerald-bg(id="{$_name}" class="{$class}" style="{$style}")
							.row
								h2
									b Purchase Order
							.row
								.col-md-3(data-status = "{$title1}")
									b Draft &nbsp;  
									{$draft_odr_count}
								.col-md-3(data-status = "{$title2}")
									b Submitted &nbsp;  
									{$submitted_odr_count}
								.col-md-3(data-status = "{$title3}")
									b Approved &nbsp;  
									{$approved_odr_count}
								.col-md-3(data-status = "{$title4}")
									b Inprogress &nbsp;  
									{$inprogress_odr_count}
							.row 
								.col-md-3(data-status = "{$title5}")
									b Redesign &nbsp;
									{$redesign_odr_count}
								.col-md-3(data-status = "{$title6}")
									b Canceled &nbsp;
									{$canceled_odr_count}
								.col-md-3(data-status = "{$title7}")
									b Rejected &nbsp;
									{$rejected_odr_count}
								.col-md-3(data-status = "{$title8}")
									b Partial Complete &nbsp;
									{$partialcomplete_odr_count}
							.row
								.col-md-3(data-status = "{$title9}")
									b Completed &nbsp;
									{$completed_odr_count}
							hr
							.row
								h2
									b Purchase Invoice
							.row
								.col-md-3(data-status = "{$title1}")
									b Draft &nbsp;  
									{$draft_inv_count}
								.col-md-3(data-status = "{$title2}")
									b Submitted &nbsp;  
									{$submitted_inv_count}
								.col-md-3(data-status = "{$title4}")
									b Due &nbsp;  
									{$due_inv_count}
								.col-md-3(data-status = "{$title6}")
									b Canceled &nbsp;
									{$canceled_inv_count}					
							.row 
								.col-md-3(data-status = "{$title5}")
									b Paid &nbsp;
									{$paid_inv_count}
					{/}
				{/}{/}
				{not_found}
				div.row
					.col-md-12.text-center.alert.alert-warning(role="alert")
						span.icon-attention.fa.fa-exclamation-triangle  &nbsp;{$not_found_message}
				{/}

			{totals}
			tfoot
				tr(class="totals")
					{cols}{col}
					<td {$tdparam}>
					{$content}
					</td>
					{/}{/}
			{/}
		{$Paginator}
