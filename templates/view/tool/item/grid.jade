div(id='{$_name}' class="{$class} row" style="{$style}")
	{rows}{row}
	ul.xshop-item.col-lg-3.col-md-3.list-group(data-xsnb-item-id='{$id}', onclick='javascript:void(0);')
		{image_wrapper}
		li.list-group-item
			a.xshop-item-image-anchor(href='{$item_detail_page_url_via_image}')
				img.xshop-item-img.thumbnail(src='{first_image}abc{/}')
		{/image_wrapper}
		{name_wrapper}
		li.list-group-item.active.text-center
			a.xepan-commerce-item-name(href='{item_detail_page_url_via_name}{/}')
				h2 {$name}
		{/}
		{sale_price_wrapper}
		li.xepan-commerce-tool-item-sale-price.list-group-item
			.row
				.col-md-6 Price
				.col-md-6 {$sale_price}
		{/}
		{original_price_wrapper}
		li.xepan-commerce-tool-item-original-price.list-group-item {$original_price}
		{/}
		{description_wrapper}
		li.xshop-item-short-description.list-group-item(onclick='javascript:void(0)')
			{$description}
		{/}
		{specification_wrapper}
		li.xepan-commerce-tool-item-specification.list-group-item
			{specification}
			{rows}{row}
			.row
				.col-md-6
					{$name}
				.col-md-6
					{$value}
			{/}{/}
			{/specification}
		{/}
		{personalizedbtn_wrapper}
		li.list-group-item
			div(data-xsnbitemid="{$id}")
				{$personalizedbtn}
		{/}
		{addtocart_wrapper}
		li.list-group-item
			.xshop-item-addtocart(data-xsnbitemid="{$id}" data-name="{$name}"){$Addtocart}
		{/}
	{/}{/}
	{not_found}
	div.full-width.alert.alert-warning(role="alert")
		strong.glyphicon.glyphicon-warning-sign &nbsp;Warning!
			span &nbsp;{$not_found_message}
	{/}
	{paginator_wrapper}
	.xshop-item-paginator(style='float:none; clear:both')
		{$Paginator}
	{/}

	style.
		.xshop-item-addtocart input, .xshop-item-addtocart select{
			width:100%;
		}
		.xshop-item-img{
			max-width:100%;
		}