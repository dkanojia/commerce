.xepan-tool-options(id='{$_name}' style="display:none" for-xepan-component='xepan/commerce/Tool_Item_Detail')
	.xepan-cms-groups-panel.collapse.in(id="xepan-cms-groups-panel")
	.xepan-cms-group-panel.clearfix
		h3.collapsed(data-toggle="collapse" data-target="#collapse-item-details" aria-expanded="false")
			span|Detail Options	
		#collapse-item-details.xepan-cms-tools-bar-panel.row-fluid.collapse
			.panel-body
				.xepan-cms-groups-panel.collapse.in(id="xepan-cms-groups-panel")
				.xepan-cms-group-panel.clearfix
					div.panel.panel-heading.panel-primary.collapsed(data-toggle="collapse" data-target="#show-hide-item-details" aria-expanded="false")
						span Hide/ Show
				#show-hide-item-details.xepan-cms-tools-bar-panel.row-fluid.collapse
					table.table.table-condensed.table-hover
						tr
							.xepan-tool-option
								td.xepan-tool-option-title Show Item Upload
								td.xepan-tool-option-value 
									select#show_item_upload(data-attr='show_item_upload')
										option(value="true") True																					
										option(value="false") False
						tr
							.xepan-tool-option
								td.xepan-tool-option-title Show Addtocart
								td.xepan-tool-option-value 
									select#show_addtocart(data-attr='show_addtocart')
										option(value="true") True																					
										option(value="false") False
				.xepan-cms-groups-panel.collapse.in(id="xepan-cms-groups-panel")
				.xepan-cms-group-panel.clearfix
					div.panel.panel-heading.panel-primary.collapsed(data-toggle="collapse" data-target="#item-details-specific-lay" aria-expanded="false")
						span Specification Layout
				#item-details-specific-lay.xepan-cms-tools-bar-panel.row-fluid.collapse
					table.table.table-condensed.table-hover
						tr						
							.xepan-tool-option
								td.xepan-tool-option-title Specification Layout
								td.xepan-tool-option-value 
									input#specification_layout(data-attr='specification_layout')
				.xepan-cms-groups-panel.collapse.in(id="xepan-cms-groups-panel")
				.xepan-cms-group-panel.clearfix
					div.panel.panel-heading.panel-primary.collapsed(data-toggle="collapse" data-target="#item-details-page-link" aria-expanded="false")
						span Page Link
				#item-details-page-link.xepan-cms-tools-bar-panel.row-fluid.collapse
					table.table.table-condensed.table-hover
						tr
							.xepan-tool-option
								td.xepan-tool-option-title Personalize Page Url
								td.xepan-tool-option-value 
									input#personalized_page(data-attr='personalized_page')
				.xepan-cms-groups-panel.collapse.in(id="xepan-cms-groups-panel")
				.xepan-cms-group-panel.clearfix
					div.panel.panel-heading.panel-primary.collapsed(data-toggle="collapse" data-target="#item-details-btn-label" aria-expanded="false")
						span Button Labels
				#item-details-btn-label.xepan-cms-tools-bar-panel.row-fluid.collapse
					table.table.table-condensed.table-hover
						tr
							.xepan-tool-option
								td.xepan-tool-option-title Personalized Button Label
								td.xepan-tool-option-value 
									input#personalized_button_label(data-attr='personalized_button_label')
						tr
							.xepan-tool-option
								td.xepan-tool-option-title Add To Cart Button Label
								td.xepan-tool-option-value 
									input#addtocart_button_label(data-attr='addtocart_button_label')
																																																													
	script.
		$('\#{$_name} [data-attr]').on('change',function(){
			$(current_selected_component).attr($(this).data('attr'),$(this).val());
		});

		$('\#{$_name}').on('show',function(event){
			$('\#{$_name} [data-attr]').each(function(index,value){
				$(this).val($(current_selected_component).attr($(this).data('attr')));				
			});
		})