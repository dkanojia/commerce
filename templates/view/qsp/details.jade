.xepan-grid.clearfix.atk-table.atk-table-zebra(id="{$_name}" class="{$class}")
    {Pannel}
    header.main-box-header.clearfix.atk-actions(class=" {$class} ")
        div.filter-block( style="100%")
            .pull-right {$grid_buttons} 
            .form-group.pull-right.xepan-filter-form
                span(class="form-control pull-left")|{$quick_search}
                    i(class="fa fa-search search-icon")
    {/Pannel}
    .main-box-body.clearfix.table
        table.table.user-list.table-hover(style="width:100%")
            {header}
            thead
                {cols}{col}
                th
                th Sno
                th Particular
                th.text-right Rate
                th.text-right Qty
                th.text-right Amount
                    br
                    small excluding tax
                th.text-right Tax %
                th.text-right Tax
                th.text-right Amount
                    br
                    small including tax
                {/}{/}
            {/}
            {$subheader}

            tbody
                {rows}{row}
                tr(class="{$odd_even}" data-id="{$id}")
                  {cols}
                  td{$edit}{$delete}
                  td {sno}01{/}
                  td(style="width:25%;") {item}Item Name{/}
                    small
                        {$extra_info}
                    small
                        | Remarks : {$narration}
                  td.text-right {price}price_here{/}
                  td.text-right {quantity}{/}
                  td.text-right {amount_excluding_tax}{/}
                  td.text-right(style="width:10%;") {tax_per}{/}
                  td.text-right.sum-tax {tax_amount}tax_amount{/}
                  td.sum-amount.text-right {total_amount}total_amount{/}
                  {/}
                {/}{/}
                {not_found}
                div.row
                    .col-md-12.text-center.alert.alert-warning(role="alert")
                        span.icon-attention.fa.fa-exclamation-triangle  &nbsp;{$not_found_message}
                {/}

            {totals}
            tfoot
                tr(class="totals")
                    {cols}{col}
                    <td {$tdparam}>
                    {$content}
                    </td>
                    {/}{/}
            {/}
        {$Paginator}
